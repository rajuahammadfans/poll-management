<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Create Poll</title>
     <link rel="stylesheet" href="/pub/css/style.css">
     <link rel="shortcut icon" href="/pub/img/favicon.ico" type="image/x-icon">
</head>
<body>
     <%- include('header'); -%>
     <div class="container mt-5">
          <div class="row">
               <div class="col-lg-6 m-auto">
                    <h2>Create a Poll</h2>
                    <div class="form-wrap mt-3">
                         <form action="/poll/create" method="POST">
                              <div class="form-content">
                                   <div class="form-group">
                                        <label for="title">Enter Title</label>
                                        <input type="text" name="title" id="title" class="form-control" placeholder="Title" required />
                                   </div>

                                   <div class="form-group mt-4">
                                        <label for="description">Enter Description</label>
                                        <textarea rows="4" name="description" id="description" class="form-control" placeholder="Description" required></textarea>
                                   </div>

                                   <div id="options" class="mt-4">
                                        <p>Poll Options</p>
                                        <div class="form-group">
                                             <input type="text" name="options" class="form-control" placeholder="Options 1" />
                                        </div>
                                        <div class="form-group mt-2">
                                             <input type="text" name="options" class="form-control" placeholder="Options 2" />
                                        </div>
                                        <div class="form-group mt-2">
                                             <input type="text" name="options" class="form-control" placeholder="Options 3" />
                                        </div>
                                   </div>

                                   <div class="form-group mt-5">
                                        <button class="btn btn-dark mr-4" id="add-more-btn" type="button">Add More Option</button>
                                        <button class="btn btn-primary" id="submit" type="submit">Create Poll</button>
                                   </div>
                              </div>
                         </form>
                    </div>
               </div>
          </div>
     </div>


     <script>
          const addBtn = document.querySelector('#add-more-btn');
          const optionsWrap = document.querySelector('#options');
          let currentOption = 4;

          addBtn.addEventListener("click",(e)=>{
               e.preventDefault();
               let div = document.createElement('div');
               div.className = 'form-group mt-2';
               let input = document.createElement('input');
               input.className = 'form-control';
               input.type = 'text';
               input.name = 'options';
               input.placeholder = `Options ${currentOption++}`;
               div.appendChild(input);
               optionsWrap.appendChild(div);
          });
     </script>
</body>
</html>